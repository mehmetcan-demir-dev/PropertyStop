@model List<ResultCategoryDto>

<section class="w3l-cover-3">
    <div class="cover top-bottom">
        <div class="container">
            <div class="middle-section text-center">
                <div class="section-width">
                    <p>Evim evim güzel evim!</p>
                    <h2>Bugün Hayallerinize Doğru Koşun.</h2>
                    <div class="most-searches">
                        <h4>Sık Arananlar</h4>
                        <ul>
                            <li><a href="#link">Villa</a></li>
                            <li><a href="#link">Daire</a></li>
                            <li><a href="#link">Müstakil</a></li>
                        </ul>
                    </div>
                    <form asp-action="PartialSearch" asp-controller="Default" class="w3l-cover-3-gd" method="post">
                        <input type="search" name="searchKeyValue" placeholder="Anahtar Kelimeyi Girin" required>
                        <span class="input-group-btn">
                            <select class="btn btn-default" name="propertyCategoryID" required>
                                <option selected="">Emlak Seçin</option>
                                @foreach (var item in Model)
                                {
                                    <option value="@item.CategoryID"> @item.CategoryName</option>
                                }

                            </select>
                        </span>
                        <span class="input-group-btn">
                            <select class="btn btn-default" name="city" required>
                                <option selected="">Şehir Seçin</option>
                                <option>Istanbul</option>
                                <option>Londra</option>
                                <option>Paris</option>
                                <option>Roma</option>
                                <option>Moskova</option>
                                <option>New York</option>
                                <option>San Francisco</option>
                                <option>Izmir</option>
                            </select>
                        </span>
                        <button type="submit" class="btn-primary">Ara</button>
                    </form>
                </div>
                <section id="bottom" class="demo">
                    <a href="#bottom"><span></span>Kaydır</a>
                </section>
            </div>
        </div>
    </div>
</section>