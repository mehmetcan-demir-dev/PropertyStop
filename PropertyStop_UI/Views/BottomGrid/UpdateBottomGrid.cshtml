 @model PropertyStop_UI.Dtos.BottomGridDtos.UpdateBottomGridDto

@{
    ViewData["Title"] = "UpdateBottomGrid";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h1>UpdateBottomGrid</h1>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Daha Doğru Bir İsim Bulacağız</h6>
                <form method="post">
                    <input type="hidden" asp-for="BottomGridID"/>
                    <label> Başlık</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label> İkon</label>
                    <input type="text" asp-for="Icon" class="form-control" />
                    <br />
                    <label> İçerik</label>
                    <input type="text" asp-for="Description" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>