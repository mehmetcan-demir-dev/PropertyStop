@{
    ViewData["Title"] = "PropertySingle";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";

    Random random = new Random();
    int viewCount = random.Next(0, 251); // 0 ile 250 arasında rastgele sayı
}
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap JS (JavaScript için gerekli dosya) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about pt-5">
        <div class="container pt-lg-5 py-3">
        </div>
    </div>
</section>
<section class="w3l-breadcrumb">
    <div class="container">
        <ul class="breadcrumbs-custom-path">
            <li><a href="/Default/Index">Anasayfa</a></li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> Property</li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> property single</li>
        </ul>
    </div>
</section>
<!--/blog-post-->
<section class="w3l-blog post-content py-5">
    <div class="container py-lg-4 py-md-3 py-2">
        <div class="inner mb-4">
            <ul class="blog-single-author-date align-items-center">
                <li>
                    <div class="listing-category">
                        @if (ViewBag.Type == "SATILIK")
                        {
                            <span style="background-color: #007bff; color: white; padding: 5px 10px; border-radius: 5px;">Satılıktır</span>
                            <span style="background-color: #ff0000; color: white; padding: 5px 10px; border-radius: 5px;">Kiralık değildir.</span>
                        }
                        @if (ViewBag.Type == "KİRALIK")
                        {
                            <span style="background-color: #343a40; color: white; padding: 5px 10px; border-radius: 5px;">Kiralıktır</span>
                            <span style="background-color: #ff0000; color: white; padding: 5px 10px; border-radius: 5px;">Satılık değildir.</span>
                        }
                    </div>
                </li>
                <li><span class="fa fa-clock-o"></span> @ViewBag.DateDiff önce ilana kondu.</li>

                <li><span class="fa fa-eye"></span> @viewCount Görüntülenme</li>
            </ul>
        </div>
        <div class="post-content">
            <h2 class="title-single"> @ViewBag.Title1</h2>
        </div>
        <div class="blo-singl mb-4">
            <ul class="blog-single-author-date align-items-center">
                <li>
                    <p>@ViewBag.Address, @ViewBag.District, @ViewBag.City</p>
                </li>
                <li><span class="fa fa-bed"></span> @ViewBag.BedroomCount Yatak Odası</li>
                <li><span class="fa fa-bath"></span> @ViewBag.bathCount Banyo</li>
                <li><span class="fa fa-share-square-o"></span> @ViewBag.ProductSize m²</li>
            </ul>
            <ul class="share-post">
                <a href="#url" class="cost-estate m-o">₺@String.Format("{0:N2}", ViewBag.Price)</a>

            </ul>
        </div>
        <div class="row">
            <div class="col-lg-8 w3l-news">
                <div class="blog-single-post">

                    @await Component.InvokeAsync("_PropertySliderViewComponentPartial")


                    <div class="single-post-content">
                        <h3 class="post-content-title mb-3">Açıklama</h3>
                        <p class="mb-4">
                            @ViewBag.description
                        </p>
                        <p class="mb-4">
                            When you decide to put your business online it is a little bet tricky step
                            for novice
                            computer users because they want to keep data safe & secure.
                            This problem developed from companies which did not take security seriously. Lorem ipsum
                            dolor sit amet elit.
                        </p>
                        <div class="single-bg-white">
                            <h3 class="post-content-title mb-4">Emlak Detayları</h3>
                            <ul class="details-list">
                                <li><strong>İlan ID :</strong> @ViewBag.ProductID </li>
                                <li><strong>Metrekare :</strong> @ViewBag.ProductSize </li>
                                <li><strong>Oda Sayısı :</strong> @(@ViewBag.BedroomCount + 2) </li>
                                <li><strong>Yatak Odası :</strong> @ViewBag.BedroomCount </li>
                                <li><strong>Banyo :</strong> @ViewBag.BathCount </li>
                                <li><strong>Dış Malzemesi :</strong> Tuğla </li>
                                <li><strong>Yapı Malzemesi :</strong> Ahşap </li>
                                <li><strong>Garaj Kapasitesi :</strong> 3 Araba </li>
                                <li><strong>Garaj Sayısı :</strong> 1 </li>
                                <li><strong>Emlak Fiyatı :</strong> ₺@String.Format("{0:N2}", ViewBag.Price)</li>
                                <li><strong>Yapı Yılı :</strong> @ViewBag.Buildyear </li>
                                <li><strong>İlan Tarihi</strong>@ViewBag.Date.ToString("dd-MMM-yyyy")</li>
                            </ul>
                        </div>
                        @await Component.InvokeAsync("_PropertyAmenityStatusTrueByPropertyIDComponentPartial")
                    </div>
                    <div class="single-bg-white">
                        <h3 class="post-content-title mb-4">Konum</h3>
                        <div class="agent-map">
                            <iframe src="@ViewBag.location"></iframe>
                        </div>
                    </div>
                    <div class="single-bg-white mb-0">
                        <h3 class="post-content-title mb-4">Tanıtım</h3>
                        <div class="post-content">
                            <iframe src="@ViewBag.videoUrl"></iframe>
                        </div>
                    </div>
                </div>
            </div>
            @await Component.InvokeAsync("_PropertyAppUserComponentPartial")
        </div>
    </div>
</section>
