@model List<ResultTestimonialDto>

@{
    Random random = new Random();
    int randomNumber = random.Next(100, 1001);
}


<section class="w3l-index3" id="about">
    <style>
        .uniform-height {
            height: auto; /* Sabit yükseklik yerine otomatik boyutlandırma */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }


        /* Uzun metinleri sınırlandırmak ve görsel düzen sağlamak */
        .text-clamp {
            white-space: normal; /* Satır satır metni göstermek için */
            overflow: visible; /* Taşan metinlerin görünmesine izin ver */
            text-overflow: clip; /* Taşma işareti (ellipsis) ekleme */
        }

    </style>
    <div class="midd-w3 py-5">
        <div class="container pb-lg-5 pb-md-4 pb-2">
            <div class="row">
                <div class="col-lg-5 pr-lg-0">
                    <div class="w3l-left-img1">
                        <!-- Görsel koyabilirsiniz -->
                    </div>
                </div>
                <div class="col-lg-7 pl-lg-0">
                    <div class="w3l-right-info">
                        <h6 class="title-small">Referanslarımız</h6>
                        <div class="client-grid">
                            <div class="client-title">
                                <h3 class="title-big">Müşteri İlişkilerine Değer Veriyoruz</h3>
                            </div>
                            <div class="clients-info">
                                <h3 class="title-big">@randomNumber</h3>
                                <p>Toplam Müşterimiz</p>
                            </div>
                        </div>

                        <!-- Bootstrap Carousel Başlangıcı -->
                        <div id="testimonialCarousel" class="carousel slide mt-4 pt-2 mb-4" data-bs-ride="carousel">
                            <!-- Slide İçeriği -->
                            <div class="carousel-inner">
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    var item = Model[i];
                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                        <div class="testimonial-item p-4 border rounded uniform-height">
                                            <h4>@item.NameSurname</h4>
                                            <p class="text-muted"><em>@item.Title</em></p>
                                            <blockquote class="blockquote">
                                                <p class="text-clamp">"@item.Comment"</p>
                                            </blockquote>
                                        </div>
                                    </div>
                                }
                            </div>

                            <!-- Sağ-Sol Oklar -->
                            <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Önceki</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Sonraki</span>
                            </button>
                        </div>

                        <a href="#agents" class="btn btn-style btn-primary mt-5">Acentamızla İletişime Geçin</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
